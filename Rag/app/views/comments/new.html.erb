<h2> New Comment </h2>
<%= form_for @comment, url: location_comments_path(params[:location_id]) do |f| %>
  <%= f.hidden_field :location_id, value: params[:location_id] %>
  <%= f.label :title %>: 
  <%= f.text_field :title %>

  <%= f.label :comment %> 
  <%= f.text_field :comment %>

  <%= f.submit %>
<% end %>
